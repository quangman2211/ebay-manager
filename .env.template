# .env.template - Environment Variables Template
# NEVER commit the actual .env file to version control
# Copy this file to .env and fill in the secure values

# Database Security
POSTGRES_PASSWORD=your_secure_database_password_here_min_16_chars
DATABASE_ENCRYPTION_KEY=your_database_encryption_key_32_chars_here

# Redis Security  
REDIS_PASSWORD=your_secure_redis_password_here_min_16_chars

# JWT Security
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters_here
JWT_REFRESH_SECRET_KEY=your_jwt_refresh_secret_key_minimum_32_characters_here

# File Upload Security
UPLOAD_PATH=/secure/upload/directory
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Logging Security
LOG_PATH=/secure/log/directory

# External Service Configuration (for future use)
SMTP_USERNAME=your_email_service_username
SMTP_PASSWORD=your_email_service_password

# Application Configuration
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Development URLs (will be overridden in production)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Security Headers
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS_PER_USER=3

# File Processing
MAX_CSV_ROWS=50000
CSV_CHUNK_SIZE=1000
MAX_CONCURRENT_JOBS=5

# Email Configuration (for notifications)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_FROM=noreply@ebaymanager.local